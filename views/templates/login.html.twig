{% extends "layout.html.twig" %}

{# Titre de la page #}
{% block title %}
Miaou | Connexion
{% endblock %}

{# Contenu spécifique à la page login #}
{% block content %}
{% block error %}
    {% endblock %}
<main>
    <section id="login" class="login-content">
        <h2>Se connecter au site Miaou</h2>
        <article id="login-form" class="form">
            <h3>Pour vous connecter :</br> authentifiez-vous</h3>
            <form action="index.php?route=check-login" method="POST">
                <div class="container-login">
                    <legend>Pour vous connecter : authentifiez-vous</legend>

                    <label for="email">Email :</label>
                    <input type="email"
                           id="email"
                           name="email"
                           aria-label="Email field"
                           value="j.guilbert@interieur.gouv.fr">
                    <div class="error-message" id="error-email"></div>

                    <label for="password">Mot de passe :</label>
                    <div class="password-container">
                        <input type="password"
                               class="password"
                               id="password"
                               name="password"
                               aria-label="Password field"
                               value="123456789Abc&">
                        <div class="error-message" id="error-old_password"></div>
                        <span class="eyes">
                            <i class="fas fa-eye-slash eyesImag"></i>
                        </span>
                    </div>
                    <div class="error-message" id="error-password"></div>

                    <input type="hidden"
                           name="csrf_token"
                           id="csrf_token"
                           value="{{ token }}">
                    <div class="error-message" id="error-token"></div>

                    <input type="submit" name="soumettre" value="Se connecter">
                </div>
            </form>
        </article>
    </section>
</main>
{% endblock %}
