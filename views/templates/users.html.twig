{% extends "layout.html.twig" %}

{# Titre de la page #}
{% block title %}
         | Gestion des Utilisateurs
{% endblock %}

{% block body %}

        {% block header %}
            {{ parent() }}
            {% block stylesheets %}
                {{ parent() }}
                <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet"
                <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet"
                {#<link href="{ asset('assets/css/user-admin-panel.css') }" rel="stylesheet" #}
            {% endblock %}
        {% endblock %}
        {% block content %}
    
            {% block error %}
            {% endblock %}
            <section id="users">
                <h2>Tous les utilisateurs</h2>
                <div>
                    <input type="text" id="search" name="search" aria-label="Search field" placeholder="Rechercher via email">
                </div>
                
                <div class="table-container">
                    <table>
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Pr√©nom</th>
                                <th>Email</th>
                                <th>Statut</th>
                                <th>Role</th>
                                
                                <th>Newsletter</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                            <tr>
                                <td>{{ user.id|e }}</td>
                                <td>{{ user.firstname|e }}</td>
                                <td>{{ user.email|e }}</td>
                                <td>{{ user.statut|e }}</td>
                                <td>{{ user.role|e }}</td>
                                <td>{{ user.newsletter|e }}</td>
                                <td><a href="?route=readOneUser&id={{ user.id|e }}">Voir</a></td>
                            </tr>
                            <style>
                table {
                    margin-top: 5vh; /* Ajoute un espace de 5 cm avant la table */
                    border-collapse: collapse;
                    width: 100%;
                }

                th, td {
                    border: 1px solid black;
                    padding: 10px;
                    text-align: left;
                }

                th {
                    background-color: #f2f2f2;
                }
            </style>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </section>
        {% endblock %}

        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
{% endblock %} 