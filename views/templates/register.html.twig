{% extends "layout.html.twig" %}

{% block title %}
      Miaou |Créer un compte 
{% endblock %}



{% block body %}

        {% block header %}
             {{ parent() }}
        {% endblock %}



        {% block content %}
                {% block error %}
                {% endblock %}
                <section id="register" class="register-content">
                        {# Titre principal masqué pour accessibilité #}
                        <h2 class="sr-only">Formulaire d'inscription</h2>

                                <article id="register-form" class="form" role="form" aria-labelledby="register-title">
                                        {# Titre du formulaire #}
                                        <h3 id="login-title">
                                                Pour accéder aux activitéx :<br aria-hidden="true"> créer un compte
                                        </h3>
                                        {# Formulaire style "fenêtre" #}
                                        <form 
                                                method="post" 
                                                action="?route=check-register" 
                                                class="register-form" 
                                                novalidate
                                                aria-describedby="register-description"
                                        >
                

                                                {# Container avec fond chat #}
                                                <div class="container-register">
                                                        {# Legend pour l'accessibilité #}
                                                        <legend class="sr-only">Informations personnelles</legend>

                                                        {# Email #}
                                                        <label for="email">
                                                                Email <span aria-label="requis" class="required">*</span>
                                                        </label>
                                                        <input 
                                                                type="email"
                                                                id="email"
                                                                name="email"
                                                                aria-describedby="error-email"
                                                                autocomplete="email"
                                                                required
                                                        >
                                                        <div 
                                                                class="error-message" 
                                                                id="error-email" 
                                                                role="alert" 
                                                                aria-live="polite"
                                                        ></div>

                                                        {# Prénom #}
                                                        <label for="firstname">Prénom de l'enfant <span aria-label="requis" class="required">*</span>
                                                        </label>
                                                        <input 
                                                                type="text"
                                                                id="firstname"
                                                                name="firstname"
                                                                aria-describedby="error-firstname"
                                                                autocomplete="given-name"
                                                                required
                                                        >
                                                        <div class="error-message" id="error-firstname" role="alert" aria-live="polite"></div>

                                                        {# Âge #}
                                                        <label for="age">Âge de l'enfant <span aria-label="requis" class="required">*</span>
                                                        </label>
                                                        <input 
                                                                type="number"
                                                                id="age"
                                                                name="age"
                                                                aria-describedby="error-age"
                                                                min="1"
                                                                max="12"
                                                                required
                                                        >
                                                        <div class="error-message" id="error-age" role="alert" aria-live="polite"></div>

                                                        {# ============ SECTION AVATARS ============ #}
                                                        <label for="avatars">Choisir un avatar<span aria-label="requis" class="required">*</span>
                                                        </label>
                                                        <article class="avatar">
                                                
                                                                <legend class= "sr-only">Choisir un avatar</legend>
                                                                <ul>
                                                                        {% for avatar in avatars %}
                                                                        <li>
                                                                        <div class="avatars">
                                                                                <input 
                                                                                type="radio"
                                                                                id="avatar-{{ avatar.id }}"
                                                                                name="avatar"
                                                                                value="{{ avatar.id }}"
                                                                                aria-describedby="error-avatar"
                                                                                {% if loop.first %}checked{% endif %}
                                                                                required
                                                                                >
                                                                                <label for="avatar-{{ avatar.id }}">
                                                                                <img 
                                                                                        src="{{ asset(avatar.urlMini) }}"
                                                                                        alt="{{ avatar.description }}"
                                                                                >
                                                                                </label>
                                                                        </div>
                                                                        </li>
                                                                        {% endfor %}
                                                                </ul>
                                                                <div class="error-message" id="error-avatar" role="alert" area-live="polite"></div>
                                                                
                                                        </article>

                                                        {# ============ SECTION NEWSLETTER ============ #}
                                                        <label for="news">
                                                                <div>
                                                                        <input 
                                                                        type="checkbox"
                                                                        id="newsletter"
                                                                        name="newsletter"
                                                                        value="1"
                                                                        checked
                                                                        >
                                                                        <label for="newsletter">
                                                                        Je souhaite recevoir la newsletter
                                                                        </label>
                                                                </div>

                                                                {# ============ CSRF TOKEN ============ #}
                                                                <input 
                                                                        type="hidden"
                                                                        name="csrf_token"
                                                                        id="csrf_token"
                                                                        value="{{ token }}"
                                                                >
                                                                <div class="error-message" id="error-token" role="alert" aria-live="assertive"></div>

                                                                {# ============ BOUTON SUBMIT ============ #}
                                                                <div class = "submit-button">
                                                                <input
                                                                                type="submit" 
                                                                                class="register-btn"
                                                                                name="soumettre"
                                                                                value="Créer un compte"
                                                                                area-label=" Créer un compte pour accéder aux activités"
                                                                        >
                                                                </div>
                                         </form>       

                                </article>
                </section>


        {% endblock %}
{% endblock %}
        
            
           
        