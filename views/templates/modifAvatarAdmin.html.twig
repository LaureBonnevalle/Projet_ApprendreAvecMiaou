    <!-- Formulaire d'ajout -->
    <div class="add-form">
        <h2><i class="fas fa-plus-circle"></i> Ajouter un nouvel avatar</h2>
        <form id="addAvatarForm" method="POST" action="?route=addAvatar">
            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

            <div class="form-grid">
                {% for field in ['name', 'url', 'caracteristique', 'qualite'] %}
                    <div class="form-group">
                        <label for="{{ field }}">{{ field|capitalize }}</label>
                        <input type="text" id="{{ field }}" name="{{ field }}" required>
                    </div>
                {% endfor %}
            </div>
            <div class="form-group">
  <label>Prévisualisation :</label>
  <div id="avatar-preview" style="margin-top: 8px;">
    <img id="avatar-preview-img" src="" alt="Aperçu" style="display: none; height: 100px; border-radius: 8px; box-shadow: 0 2px 6px rgba(0,0,0,0.2);">
  </div>
</div>
            <div class="form-group">
                <label for="description">Description</label>
                <textarea id="description" name="description" rows="3" required></textarea>
            </div>
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> Ajouter l'avatar
            </button>
        </form>
    </div>

    <!-- Liste des avatars -->
    <div class="avatars-grid">
        {% for avatar in avatars %}
            <div class="avatar-card">
                <div class="avatar-header">
                    {% if avatar.url %}
                        <img src="{{ avatar.url }}" alt="Avatar" class="avatar-image">
                    {% else %}
                        <div class="avatar-image-placeholder"><i class="fas fa-user"></i></div>
                    {% endif %}
                    <div class="avatar-title">
                        <h3>{{ avatar.nom }}</h3>
                        <small>ID: #{{ avatar.id }}</small>
                    </div>
                </div>
                <div class="avatar-details">
                    <div class="detail-item">
                        <span class="detail-label">Description:</span>
                        <span class="detail-value">{{ avatar.description }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Caractéristique:</span>
                        <span class="detail-value">{{ avatar.caracteristique }}</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-label">Qualité:</span>
                        <span class="detail-value">{{ avatar.qualite }}</span>
                    </div>
                </div>
                <div class="avatar-actions">
                    <form method="POST" action="?route=deleteAvatar" onsubmit="return confirm('Supprimer cet avatar ?');">
    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
    <input type="hidden" name="id" value="{{ avatar.id }}">
    <button class="btn btn-danger" type="submit">
        <i class="fas fa-trash"></i> Supprimer
    </button>
</form>
                </div>
            </div>
        {% else %}
            <p>Aucun avatar à afficher.</p>
        {% endfor %}
    </div>
