{% extends "layout.html.twig" %}

{% block title %}
      Miaou |Page Accueil 
{% endblock %}



{% block body %}

        {% block header %}
            {{ parent() }}
        {% endblock %}

        
    
    {% block content %}
    
    {% block error %}
    {% endblock %}
                <section id="modifyPassword">

                <h2 class="sr-only">
                        Remplissez et validez le formulaire
                </h2>
                
                <article id="modifyPassword-content">
                        <h3>Modifier mon mot de passe</h3>

                        <form method="POST" id="modifyPassword-form" action="?route=modifyPassword">
                        
                        <fieldset>
                                <legend>Merci de renseigner les informations suivantes :</legend>
                                
                                <label for="email">Email :</label>
                                <input type="email"
                                id="email"
                                name="email"
                                aria-label="Champ email"
                                value="lbonneva@hotmail.com"
                                required>
                                <div class="error-message" id="error-email" role="alert"></div>
                        </fieldset>

                        <fieldset>
                                <label for="old_password">Ancien mot de passe :</label>
                                <div class="password-container">
                                <input type="password"
                                        class="password"
                                        id="old_password"
                                        name="old_password"
                                        aria-label="Champ ancien mot de passe"
                                        required>
                                <div class="error-message" id="error-old_password" role="alert"></div>
                                <span class="eyes">
                                        <i class="fas fa-eye-slash eyesImag" aria-hidden="true"></i>
                                        <span class="sr-only">Afficher/masquer le mot de passe</span>
                                </span> 
                                </div>
                        </fieldset>

                        <fieldset>
                                <label for="new_password">Nouveau mot de passe :</label>
                                <div class="password-container">
                                <input type="password"
                                        class="password"
                                        id="new_password"
                                        name="new_password"
                                        aria-label="Champ nouveau mot de passe"
                                        required>
                                <div class="error-message" id="error-new_password" role="alert"></div>
                                <span class="eyes">
                                        <i class="fas fa-eye-slash eyesImag" aria-hidden="true"></i>
                                        <span class="sr-only">Afficher/masquer le mot de passe</span>
                                </span>             
                                </div>
                        </fieldset>        

                        <fieldset>
                                <label for="confirm_new_password">Confirmer nouveau mot de passe :</label>
                                <div class="password-container">
                                <input type="password"
                                        class="password"
                                        id="confirm_new_password"
                                        name="confirm_new_password"
                                        aria-label="Champ confirmation nouveau mot de passe"
                                        required>
                                <div class="error-message" id="error-confirm_new_password" role="alert"></div>
                                <span class="eyes">
                                        <i class="fas fa-eye-slash eyesImag" aria-hidden="true"></i>
                                        <span class="sr-only">Afficher/masquer le mot de passe</span>
                                </span>         
                                </div>
                                
                                <input type="hidden"
                                name="csrf_token"
                                id="csrf_token"
                                value="{{ token }}">
                                <div class="error-message" id="error-token" role="alert"></div>
                        </fieldset>

                        <fieldset>
                                <button type="submit" name="soumettre" class="submit-btn">
                                Modifier mon mot de passe
                                </button>
                        </fieldset>
                        </form>
                </article>
                </section>
    {% endblock %}

   

    
{% endblock %}
