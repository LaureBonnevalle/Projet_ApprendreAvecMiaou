{% extends "layout.html.twig" %}

{% block title %}
      Miaou |Souscription à la newsletter 
{% endblock %}
{% block body %}

        {% block header %}
            {{ parent() }}
        {% endblock %}

        {% block content %}
        
        {% block error %}
        {% endblock %}
        <section id="newsletter-subscribe" class="newsletter-content">
            <h2>Abonnez-vous à notre newsletter</h2>

            <form method="post" id="newsletter-form" action="?route=newsletterSubscribe">
                <div class="form-group">
                    <label for="firstname">Prénom <span class="required">*</span></label>
                    <input 
                        type="text" 
                        id="firstname" 
                        name="firstname" 
                        placeholder="Votre prénom" 
                        autocomplete="given-name" 
                        required>
                    <div class="error-message" id="error-firstname" role="alert" aria-live="polite"></div>
                </div>

                <div class="form-group">
                    <label for="email">Adresse email <span class="required">*</span></label>
                    <input 
                        type="email" 
                        id="email" 
                        name="email" 
                        placeholder="exemple@email.com" 
                        autocomplete="email" 
                        required>
                    <div class="error-message" id="error-email" role="alert" aria-live="polite"></div>
                </div>

                {# CSRF token #}
                <input type="hidden" name="csrf_token" id="csrf_token" value="{{ csrf_token }}">
                <div class="error-message" id="error-csrf_token" role="alert" aria-live="polite"></div>

                <button type="submit" class="submit-btn">S'abonner</button>
            </form>
        </section>
{% endblock %}
{% endblock %}