{% extends "layout.html.twig" %}

{% block title %}
      Miaou |Page Contact
{% endblock %}
{% block body %}

        {% block header %}
            {{ parent() }}
        {% endblock %}

        {% block content %}
        
        {% block error %}
        {% endblock %}

        <section id="contact"class="contact-content">
        
            <h2>Une demande ? Une suggestion ? signalez un bug ? Contactez Miaou</h2>
            <article id="contact-form" class="form">
                <h3>Pour nous contacter, remplissez le formulaire</h3>
                <form method="POST" action="?route=contact" class="contact-form" novalidate aria-describedby="contact-description">
                <div class="container-contact">
                        <legend class="sr-only">Informations de contact</legend>

                        <label for="firstname">Prénom <span aria-label="requis" class="required">*</span></label>
                        <input type="text" id="firstname" name="firstname" aria-describedby="error-firstname" required>
                        <div class="error-message" id="error-firstname" role="alert" aria-live="polite"></div>

                        <label for="email">Email <span aria-label="requis" class="required">*</span></label>
                        <input type="email" id="email" name="email" aria-describedby="error-email" required>
                        <div class="error-message" id="error-email" role="alert" aria-live="polite"></div>

                        <label for="subject">Sujet <span aria-label="requis" class="required">*</span></label>
                        <input type="text" id="subject" name="subject" aria-describedby="error-subject" required>
                        <div class="error-message" id="error-subject" role="alert" aria-live="polite"></div>

                        <label for="content">Votre message <span aria-label="requis" class="required">*</span></label>
                        <textarea id="content" name="content" rows="5" aria-describedby="error-content" required></textarea>
                        <div class="error-message" id="error-content" role="alert" aria-live="polite"></div>

                        <input type="hidden" name="csrf_token" id="csrf_token" value="{{ csrf_token }}">
                        <div class="error-message" id="error-csrf_token" role="alert" aria-live="assertive"></div>

                        <div class="submit-button">
                        <input type="submit" class="register-btn" name="soumettre" value="Envoyer" aria-label="Envoyer votre message à Miaou">
                        </div>
                </div>
                </form>
        </section>
   {% endblock %}
{% endblock %}

